@using (Html.BeginForm("AddFlightDetails", "AddFlight", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
    <div class="form-group">
        @Html.LabelFor(m => m.FlightNumber, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(m => m.FlightNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FlightNumber)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DestinationName, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(m => m.DestinationName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DestinationName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FlightDistance, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(m => m.FlightDistance, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FlightDistance)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FlightPrice, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(m => m.FlightPrice, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FlightPrice)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DiscountPercentage, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(m => m.DiscountPercentage, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DiscountPercentage)
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-offset-3 col-md-9 backbtn">
            @Html.ActionLink("Back", "Menu", "Home")

            <input type="submit" value="Submit" />
        </div>
    </div>

    @*<div class="form-group" ;>
            <div class="col-md-offset-3 col-md-9 backbtn">

            </div>
        </div>*@

    <script>
        $(window).load(function () {
           $('Html.BeginForm').children('input:not(#submit)').val('')
        }
    </script>
 }



